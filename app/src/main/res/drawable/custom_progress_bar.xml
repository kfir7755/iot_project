<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#000" /> <!-- Background color of the ProgressBar -->
            <stroke
                android:width="2dp"
                android:color="#FFF" />
            <corners android:radius="10dp" /> <!-- Adjust the corner radius as desired -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/white" /> <!-- Progress color -->
                <corners android:radius="10dp" /> <!-- Adjust the corner radius as desired -->
            </shape>
        </clip>
    </item>
</layer-list>
